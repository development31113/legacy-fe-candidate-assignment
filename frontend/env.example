# Dynamic.xyz Configuration
# Get your environment ID from https://app.dynamic.xyz/
NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID=your-dynamic-environment-id

# API Configuration
# Выберите один из провайдеров: 'vercel' или 'aws'
NEXT_PUBLIC_API_PROVIDER=vercel

# Vercel API Configuration (для Vercel deployment)
NEXT_PUBLIC_VERCEL_API_URL=https://your-app.vercel.app

# AWS API Configuration (для AWS deployment)
# Замените на ваш AWS API Gateway URL после развёртывания
NEXT_PUBLIC_AWS_API_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev

# Database Configuration (для Vercel KV)
# Эти переменные используются только в Vercel API routes
KV_URL=your-vercel-kv-url
KV_REST_API_URL=your-vercel-kv-rest-api-url
KV_REST_API_TOKEN=your-vercel-kv-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-vercel-kv-read-only-token

# Backend URL (fallback for local development)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Vercel URL (for production)
NEXT_PUBLIC_VERCEL_URL=

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Development Settings
NODE_ENV=development 